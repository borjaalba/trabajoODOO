    <record id="ruta_property_form" model="ir.ui.view">
        <field name="name">ruta.property.form</field>
        <field name="model">ruta.property</field>
        <field name="arch" type="xml">
            <form string="Ruta">
                <div class="oe_title">
                    <h1>
                        <field name="origen" placeholder="Origen"/>
                    </h1>
                </div>
                <div class="oe_title">
                    <h1>
                        <field name="destino" placeholder="Destino"/>
                    </h1>
                </div>
                <div class="oe_button_box" name="button_box">
                    <h1>
                        <button name="calcular_distancia" string="Calcular ruta" type="object" class="btn-primary" icon="fa-rocket"/>
                    </h1>
                </div>
                <group>
                    <field name="waypoints"/>
                    <field name="distancia"/>
                    <field name="duracion"/>
                </group>
            </form>
        </field>
    </record>
