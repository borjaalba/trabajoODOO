<odoo>

    <!-- Formulario con las propiedades: Origen, destino y waypoints (una debajo de la otra)-->
    <record id="ruta_property_form" model="ir.ui.view">
        <field name="name">ruta.property.form</field>
        <field name="model">ruta.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <group>
                    <field name="origen"/>
                    <field name="destino"/>
                    <field name="waypoints"/>
                </group>
            </form>
        </field>
    </record>
    

